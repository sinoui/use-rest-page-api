{
  "name": "@sinoui/use-rest-page-api",
  "version": "0.2.0",
  "description": "简化分页列表与RESTful CRUD API交互的状态管理",
  "license": "MIT",
  "main": "dist/index.js",
  "umd:main": "dist/use-rest-page-api.umd.production.js",
  "module": "dist/use-rest-page-api.es.production.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "start": "ts-lib-tools watch",
    "test": "ts-lib-tools test",
    "build": "ts-lib-tools build",
    "format": "ts-lib-tools format",
    "lint": "ts-lib-tools lint",
    "prepublishOnly": "ts-lib-tools build"
  },
  "prettier": {
    "printWidth": 80,
    "useTabs": false,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always"
  },
  "eslintConfig": {
    "extends": "ts-lib"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/*.{ts,tsx}": [
      "cross-env CI=true ts-lib-tools test",
      "eslint --fix --color",
      "git add"
    ]
  },
  "files": [
    "dist",
    "assets"
  ],
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "@babel/runtime": "^7.4.4",
    "@sinoui/http": "^0.2.2",
    "qs": "^6.7.0"
  },
  "devDependencies": {
    "@testing-library/react": "^8.0.1",
    "@types/qs": "^6.5.3",
    "@types/react": "^16.8.18",
    "@types/react-dom": "^16.8.4",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "prettier": "^1.17.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-hooks-testing-library": "^0.5.0",
    "react-test-renderer": "^16.8.6",
    "ts-lib-tools": "^0.2.2",
    "typescript": "^3.4.5"
  },
  "peerDependencies": {
    "react": "^16.8.6"
  },
  "publishConfig": {
    "access": "public"
  }
}
